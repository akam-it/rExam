<h2><%= @title %></h2>

<table class="table table-striped">
  <tbody>
    <tr>
      <td>Username
      <td><%= @user.username %>
    <tr>
      <td>Email
      <td><%= @user.email %>
    <tr>
      <td>Администратор
      <td><%= @user.admin? ? "Да" : "Нет" %>
    <tr>
      <td>Зарегистрирован
      <td><%= @user.created_at %>
  </tbody>
</table>

<% if @user == current_user %>
  <%= link_to "Изменить профиль", edit_user_path(@user) %>
<% end %>
