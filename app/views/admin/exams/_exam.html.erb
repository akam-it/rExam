<div class="container-fluid">
  <div class="accordion-group">
    <div class="accordion-heading"><a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">Свойства экзамена</a></div>
    <div id="collapseOne" class="accordion-body collapse out">

      <div class="tabbable tabs-left"> <!-- Only required for left/right tabs -->
        <ul class="nav nav-tabs">
          <li class="active"><a href="#tab1" data-toggle="tab">Свойства</a></li>
          <li><a href="#tab2" data-toggle="tab">Секции</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="tab1">
            <div class="accordion-inner"><%= render 'exam_options' %></div>
          </div>
          <div class="tab-pane" id="tab2">
            <div class="accordion-inner"><%= render 'exam_sections' %></div>
          </div>
      </div>


    </div>
  </div>

  <div class="row-fluid">
    <div class="span2" style="background-color: #eee; height : 400px; overflow : auto;">
      <%= button_to "Новый вопрос".html_safe, "?question=new", :remote => true, :class => "btn btn-info", :method => :get %>
      <!--Sidebar content-->
      <ul>
      <% @questions.each.with_index(1) do |question,index|  %>
        <%= link_to "<li id='question-#{index}'>Вопрос #{index}</li>".html_safe, "?question=#{question.id}", :remote => true %>
      <% end %>
    </ul>
    </div>
    <div id="question-side" class="span10" style="background-color: #eee;padding:5px">
      <!--Body content-->
    <% if @questions.size >= 1 %>
      <%= render ("question") %>
    <% else %>
      Вопросы отсутствуют.
    <% end %>

    </div>
  </div>
</div>
