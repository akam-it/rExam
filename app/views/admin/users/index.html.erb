<h3><%= @title %></h3>
<%= button_to "Добавить пользователя", new_admin_user_path, :class => "btn btn-primary", :method => "get" %>

<table class="table table-hover">
  <thead>
    <tr><th width=10>#<th>User<th>Email<th>Admin?<th>Actions
  </thead>
  <tbody>
     <% @users.each.with_index(1) do |user,index| %>
       <tr>
         <td><%= index %>
         <td><%= user.username %>
         <td><%= user.email %>
         <td><%= user.admin? ? "+" : "-" %>
         <td><%= link_to "<i class='icon-edit'></i>".html_safe, edit_admin_user_path(user) %> <%= link_to "<i class='icon-trash'></i>".html_safe, admin_user_path(user), :method => :delete, :confirm => "Вы уверены?" %>
     <% end %>
  </tbody>
</table>
